<Window x:Class="WpfVarik3.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfVarik3.Views"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="450">
    <Grid>
        <StackPanel Margin="20">
            <TextBox Margin="0, 10, 0, 0" Text="Login" x:Name="LoginBox"/>
            <TextBox Margin="0, 10, 0, 0" Text="Password" x:Name="PasswordBox"/>
            <TextBox Margin="0, 10, 0, 0" Text="Name" x:Name="NameBox"/>
            <TextBox Margin="0, 10, 0, 0" Text="Surname" x:Name="SurnameBox"/>
            <TextBox Margin="0, 10, 0, 0" Text="Phone" x:Name="PhoneBox"/>

            <StackPanel Margin="0, 10, 10, 0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Margin="0, 0, 10, 0" Content="Register" Click="RegisterButton_Click"></Button>
                <Button Content="Cancel" Click="CancelButton_Click"></Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
