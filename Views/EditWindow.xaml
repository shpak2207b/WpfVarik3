<Window x:Class="WpfVarik3.Views.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfVarik3.Views"
        mc:Ignorable="d"
        Title="EditWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBox Margin="10" x:Name="InventoryNumberBox" Text="InventoryNumber"></TextBox>
            <TextBox Margin="10" x:Name="NameBox" Text="Name"></TextBox>
            <TextBox Margin="10" x:Name="TypeBox" Text="Type"></TextBox>
            <TextBox Margin="10" x:Name="DescriptionBox" Text="Description"></TextBox>
            <ComboBox x:Name="StatusBox"/>
            <Button Margin="10" x:Name="AddButton" Content="Редактировать" Click="SaveButton_Click"></Button>
            <Button x:Name="CloseButton" Content="Назад" Click="CloseButton_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
